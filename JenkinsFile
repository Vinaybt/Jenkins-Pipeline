pipeline {
    agent any
    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Vinaybt/Jenkins-Pipeline.git'
            }
        }
        stage('Build C++ App') {
            steps {
                sh 'make'
            }
        }
        stage('Run App') {
            steps {
                sh './app'
            }
        }
        stage('Clean Up') {
            steps {
                sh 'make clean'
            }
        }
        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '**/app', fingerprint: true
            }
        }
    }
}
