pipeline {
    agent {
        docker {
            image 'gcc:latest'
            args '-u root' // if you need permissions for install or chmod
        }
    }
    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Vinaybt/Jenkins-Pipeline.git'
            }
        }
        stage('Build C++ App') {
            steps {
                sh 'make'
            }
        }
        stage('Run App') {
            steps {
                sh './app'
            }
        }
        stage('Clean Up') {
            steps {
                sh 'make clean'
            }
        }
    }
}
