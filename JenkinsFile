pipeline {
    agent any
    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Vinaybt/Jenkins-Pipeline.git'
            }
        }
        stage('Install Build Tools') {
            steps {
                sh '''
                    sudo apt-get update
                    sudo apt-get install -y build-essential
                '''
            }
        }
        stage('Build C++ App') {
            steps {
                sh 'make'
            }
        }
        stage('Run App') {
            steps {
                sh './app'
            }
        }
        stage('Clean Up') {
            steps {
                sh 'make clean'
            }
        }
    }
}
